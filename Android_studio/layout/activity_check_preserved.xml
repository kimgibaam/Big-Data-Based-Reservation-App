<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckPreserved"
    android:background="@drawable/check"
    android:orientation="vertical">


    <EditText
        android:id="@+id/editText_check_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="85dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="15dp"
        android:inputType="text" />


        <Button
            android:layout_marginTop="25dp"
            android:layout_marginLeft="41dp"
            android:layout_width="330dp"
            android:layout_height="36dp"
            android:id="@+id/button_check_preserved"
            android:background="#00ff0000"
            />

        <TextView
            android:id="@+id/textView_check_name"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="15dp"
            android:textColor="#000000"
            android:layout_gravity="center"
            />

    <Button

        android:id="@+id/button_check_delete"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="예약 취소하기"
        android:background="@color/colorGray"
        android:textColor="#000000"
        android:visibility="gone"
        />



    <TextView
        android:id="@+id/textView_check_delete"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textSize="15dp"
        android:textColor="#000000"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"/>

    </LinearLayout>